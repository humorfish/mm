<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        android:padding="@dimen/padding_gank_item"
        android:textSize="@dimen/text_size_gank_category"
        android:textStyle="bold"
        tools:background="@color/md_amber_100"
        android:textColor="@color/md_black_1000"
        tools:text="Category"/>

    <LinearLayout
        android:id="@+id/gank_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_gank_item"
        android:paddingRight="@dimen/padding_gank_item"
        android:paddingTop="@dimen/padding_vertical_gank_item"
        android:paddingBottom="@dimen/padding_vertical_gank_item"
        android:background="?attr/selectableItemBackground"
        tools:background="@color/md_amber_100">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="*"/>

        <android.support.v4.widget.Space
            android:layout_width="6dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_gank_title"
            android:textColor="@color/md_grey_900"
            tools:text="叔叔、叔叔，西湖怎么走？"/>
    </LinearLayout>

</LinearLayout>